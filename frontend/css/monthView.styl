// Only edit the *.styl file. The css generation is triggered on change.

marg=20px
heightWeek=50px
border=#CCC
gradient=linear-gradient(to bottom, #0088cc, #0044cc)
fontColor=#0088cc

body
  font-size: 14px
  line-height:1.428571429

h1,h2,h3
  margin:5px

.gradient
  background-image:gradient
  color: #fff

.dayBackground
  background-color: #b9def0

#timeline-month-view-main
  width: 80%
  height: 80%

#root
  margin-left:marg
  margin-top:marg

/*
#timeline-month-view-header, #timeline-month-view-days
  width:776px
*/

#timeline-month-view-header,.header
  width:768px
  border-radius: 3px
  border-top:1px solid #fff
  display:inline-block
  margin-bottom:0px
  background-image:gradient
  color:#fff
  padding:5px;
  height:20px;

.timeline-month-view-header-day
  text-align:center
  display:inline-block
  width:107px
  //border-right: 1px solid border
//  width:14%


.timeline-month-view-week-day
  width:110px

#timeline-month-view-days
  color:fontColor
  width:776px
  border-left: 1px solid border
  border-right: 1px solid border
  display:inline-block
  margin-right:10px
  margin-top:-7px
//  width:100%

.timeline-month-view-weeks
  min-height: heightWeek
  width:100%
  display:block


.timeline-month-view-week-day
  display:inline-block;
  border-right:1px solid border
  border-bottom:1px solid border
  height:50px
  vertical-align:bottom
  overflow:visible
  text-align:right
  cursor:pointer


.dayText
  margin:10px
  margin-top:0
  width:90%
  height:90%
  background:none



.toolbar div
  display:inline-block
  width:32%

.toolbarLeft button
  font-weight:bold
  text-align:center

.toolbarMid
    font-weight:bold

.toolbarRight
  text-align:right

.selectClass
  background-image:gradient
  background-color:fontColor

.b
  background-color:blue

.g
  background-color:green

.r
  background-color:red

.borderBottom
  border-bottom: 1px solid border

.borderRight
  border-right: 1px solid border

.borderLeft
  border-left: 1px solid border

.borderRadius
  border-top-left-radius:4px
  border-top-right-radius:4px

.weekHeader>div
  padding:0

.weekHeader
  vertical-align: middle

.height
  height:50px

/*
table
  border-spacing: 2px
  border-collapse:collapse
  font-size: 14px

td, th
  display: table-cell
  vertical-align: inherit
  line-height: 1.428571429
*/

table.monthView
  border-collapse:collapse
  width:400px
  margin:10px
  margin-left:40px

//table.monthView, .monthView td, .monthView th


.monthView th
  border:none
  text-align: center
  padding:5px
  font-size:14px

.monthView td
  border:1px solid border
  padding:10px
  text-align:right
  position: relative
  overflow: visible

.center
  text-align:center

.calDay
  font-size: 18px

.tabMid
  color:fontColor
  font-size:18px

.blockX
  z-index:10000000
  border-radius:3px

.busy
  background-color:#7ab5d3
  color:#fff

.newRes
  background-color:#C09853
  cursor:pointer

.modal, .modal-dialog
  width:400px
  height:520px

.modal-content
  border:0

.modal
  position:fixed
  top:10%
  left:50%
  z-index:1050
  margin-left:-280px
  outline:none

.notCurrentMonth
  color:#aaaaaa
  background-color:#F0FFFF
  font-size:12px

.monthBtns .btn
  font-size:18px
  color:#737373

.monthViewDiv
  position:fixed
  top:10%
  left:50%
  margin-left:-280px
  outline:none

.error
  color:red