slider-width=7665px

body
  font-family: tahoma, verdana, helvetica, serif
  font-size: 0.8em
  padding: 10px

#root-timeline
    margin-top:20px

div.timeline-content
    border:1px solid #0088cc
    border-radius: 4px


div.timeline-header-month,
div.timeline-header-day,
div.resource-header,
div.resource-header-item-name,
div.resource-header-series,
div.timeline-grid,
div.timeline-grid-row-cell
    float:left
    z-index:2
    position:relative

div.timeline-header-month,
div.timeline-header-day
    text-align:center

div.timeline-grid-row-cell.last,
div.timeline-header-day.last,
div.timeline-header-month.last
    border-right:none

div.timeline-header-month
    width: 60px
    height: 20px
    border-right: 1px solid #0088cc
    font-weight: 500
    line-height: 20px
    color:#fff
    background-image: linear-gradient(to bottom, #0088cc, #0044cc)
    
div.timeline-header-day
	width: 20px
	height: 20px
	border-right: 1px solid #f0f0f0
	border-top: 1px solid #d0d0d0
	line-height: 20px
	color: #0044cc


div.resource-header 
    margin-top: 41px
    width: 150px
    overflow: hidden
    color: #0044cc


div.resource-header-item 
	overflow: hidden


div.resource-header-item-name.last
    border-bottom: 0px solid #f0f0f0

div.resource-header-item-name
    width: 140px
    padding-left: 5px
    padding-right: 5px
    padding-top: 10px
    border-top: 1px solid #f0f0f0
    line-height: 10px
    height: 21px
    margin-top:0px


div.timeline-slide-container 
    overflow: auto
    border-left: 1px solid #0088cc
    padding-bottom:5px
    min-height:115px
    width:900px


div.timeline-grid-row-cell
    z-index:2
    width: 20px
    height: 31px
    border-right: 1px solid #f0f0f0
    border-top: 1px solid #f0f0f0


div.timeline-grid-row-cell.dayWeekend
    background-color: #fafafa

div.timeline-blocks
    margin-top: 40px
    position:static
    z-index:1


div.timeline-block-container
    height: 28px
    padding-top: 4px
    position: relative


div.timeline-block
    z-index:3
    position: absolute
    height: 25px
    background-image: linear-gradient(to bottom, #0088cc, #0044cc)
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    border-radius: 4px
    -moz-border-radius: 4px
    -webkit-border-radius: 4px


div.timeline-block-text, div.timeline-block
    cursor:move

div.timeline-block-text
    position: absolute
    height: 12px
    font-size: 0.8em
    color: #fff
    padding: 2px 3px



div.timeline-block div.ui-resizable-handle.ui-resizable-s
    bottom: -0


.timeline-header-months, .timeline-header-days, .timeline-grid, .timeline-grid-row
    width: slider-width

div.modalDialog
    width: 250px

div.timeline-grid
    border-bottom: 1px solid #f0f0f0

::-webkit-scrollbar
    -webkit-appearance: none
    width: 7px
    height:7px


::-webkit-scrollbar-thumb
    border-radius: 3px
    background-color: rgba(0,0,0,.2)
    -webkit-box-shadow: 0 0 1px rgba(255,255,255,.5)


.error
    padding:4px
    margin:4px
    font-size: 11px
    border-radius: 2px
    border:1px solid orangered

div.selectClass
    background-image: linear-gradient(to bottom, #0088cc, #0044cc)
    cursor:pointer